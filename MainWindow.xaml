<Window x:Class="Move.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Move" Height="327" Width="550">
    <Grid>

        <ListBox ItemsSource="{Binding Path=Files}" Grid.Row="0" Name="DropBox" 
                 HorizontalAlignment="Left" Height="240" Margin="10,45,10,10" 
                 VerticalAlignment="Top" Width="522" AllowDrop="True" Drop="DropBox_Drop" 
                 DragOver="DropBox_DragOver" DragLeave="DropBox_DragLeave" 
                 Background="#FFE2E2E2" FontSize="10">
        </ListBox>
        <TextBox x:Name="Num" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" 
                 TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" HorizontalContentAlignment="Center" />

    </Grid>
</Window>
